extends default 

block productContent
    h1 Toppings : #{order}
    select#productFilter(name='Order Filter')
     option(value='alpha') Alphabetical
     option(value='ascending') Ascending
     option(value='descending') Descending

    #productTable 
    each product in productData 
        .productItem
         h2 #{product.name} 
          p #{product.type}
          p #{product.serving_size}
          p #{product.price_per_serving}