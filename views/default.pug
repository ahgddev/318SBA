head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/styles.css')
  block scripts
  title Pizza Manager
  - var managerT = managerType
header
  h1 Pizza Manager
main
  nav#sideBar
    img(src='/iconmonstr-cook-3-96.png', alt='user_image')
    p#userHello
      | Hello 
      em Chef
    p#userTitle Manager
    ul
      li
        a(href='http://localhost:3000/pizzas/') Pizza Manager
      li
        a(href='http://localhost:3000/toppings/') Toppings Manager
  section#productSection
    #searchContainer
      form(action=`http://localhost:3000/${managerT}/search`, method="GET") 
        input#searchBar(type='search', name='name', placeholder=`Search ${managerT}`)
        button(type='submit')
          img(src='/iconmonstr-magnifier-lined-24.png', alt='search_icon')
    #productList
      block productContent
  section
    #submitNewForm
      block formContent
